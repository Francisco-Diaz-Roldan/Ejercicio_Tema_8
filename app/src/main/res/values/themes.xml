<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ejercicio_Tema_8" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <!-- Estilo específico para la Toolbar -->
    <style name="ToolbarStyle" parent="Widget.Material3.Toolbar">
        <!-- Cambia el fondo de la Toolbar al color deseado -->
        <item name="android:background">@color/orange</item>
        <!-- Establece el título de la Toolbar -->
        <item name="android:title">Ejercicio Unidad 8</item>
        <!-- Establece el color del texto de la Toolbar -->
        <item name="titleTextColor">@android:color/white</item>
        <!-- Establece el color de los iconos -->
        <item name="android:colorControlNormal">@android:color/white</item>
    </style>

    <style name="Theme.Ejercicio_Tema_8" parent="Base.Theme.Ejercicio_Tema_8">
        <!-- Aplica el nuevo estilo de la Toolbar -->
        <item name="toolbarStyle">@style/ToolbarStyle</item>
    </style>

    <!-- Para el SplashScreen -->
    <style name = "Theme.App.Starting" parent="Base.Theme.Ejercicio_Tema_8">
        <item name = "windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/spain</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Ejercicio_Tema_8</item>
    </style>
</resources>
